{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Friction",
  "colors": {
    "primary": "#0A054B",
    "light": "#3668FF",
    "dark": "#0A054B"
  },
  "anchors": {
    "from": "#0A054B",
    "to": "#3668FF"
  },
  "favicon": "/favicon.svg",
  "font": {
    "headings": {
      "family": "Montserrat"
    },
    "body": {
      "family": "Inter"
    }
  },
  "topbarCtaButton": {
    "type": "link",
    "name": "Dashboard",
    "url": "https://app.friction.com"
  },
  "tabs": {
    "style": "underline"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Dashboard",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "dashboard/overview"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/performance-tracking",
              "features/experiments",
              "features/reports"
            ]
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.friction.com",
          "icon": "chart-line"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@friction.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.friction.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/friction",
      "github": "https://github.com/friction",
      "linkedin": "https://linkedin.com/company/friction"
    }
  }
}
